{
  "name": "checkmate-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "plugins/*"
  ],
  "scripts": {
    "dev": "docker compose up -d && bun run --filter '@checkmate/backend' --filter '@checkmate/frontend' dev",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "bun run lint:code && bun run lint:deps",
    "lint:code": "bun run eslint .",
    "lint:deps": "bun run scripts/validate-dependencies.ts",
    "bundle-vendor": "bun run scripts/bundle-vendor.ts",
    "docker:stop": "docker compose down",
    "changeset": "changeset",
    "version-packages": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.5",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "bun": "^1.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-unicorn": "^62.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  },
  "dependencies": {
    "@orpc/contract": "^1.13.2"
  }
}
