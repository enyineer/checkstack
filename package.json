{
  "name": "checkstack-monorepo",
  "private": true,
  "workspaces": [
    "core/*",
    "plugins/*",
    "plugins/_test-scaffolds/*"
  ],
  "scripts": {
    "dev": "docker compose -f docker-compose-dev.yml up -d && bun run --filter '@checkstack/backend' --filter '@checkstack/frontend' dev",
    "typecheck": "bun run scripts/typecheck.ts",
    "lint": "bun run lint:code && bun run lint:deps",
    "lint:code": "bun run eslint .",
    "lint:deps": "bun run scripts/validate-dependencies.ts",
    "bundle-vendor": "bun run scripts/bundle-vendor.ts",
    "docker:stop": "docker compose -f docker-compose-dev.yml down",
    "changeset": "changeset",
    "version-packages": "bun run scripts/inject-release.ts && changeset version",
    "create": "bun run core/scripts/src/commands/create.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.5",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "eslint-plugin-unicorn": "^62.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  },
  "dependencies": {
    "@orpc/contract": "^1.13.2"
  }
}
